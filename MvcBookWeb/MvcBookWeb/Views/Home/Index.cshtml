@model IEnumerable<MvcBookWeb.Models.書籍>

@{
    ViewBag.Title = "書籍列表";
}

<h2>書籍列表</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.書號)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.書名)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.單價)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.圖示)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.書號)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.書名)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.單價)
    </td>
    <td>
        @*@Html.DisplayFor(modelItem => item.圖示)*@
        @if (item.圖示 == "")
        {
            @:無圖示
        }
        else
        {
            <img src="~/Images/@item.圖示" width="130"/>
        }
    </td>
    <td>
        @*@Html.ActionLink("Edit", "Edit", new { id = item.書號 }) |
        @Html.ActionLink("Details", "Details", new { id = item.書號 }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.書號 })*@
        @Html.ActionLink("編輯", "Edit", new { id = item.書號 }, null) |
        @Html.ActionLink("刪除", "Delete", new { id = item.書號 },
                                           new
                                           {
                                            onClick = "return confirm('確定要刪除書號" + item.書號 + "的紀錄嗎?');"
                                           })
    </td>
</tr>
}

</table>
